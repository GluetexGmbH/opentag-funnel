<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:OpenTAG.Funnel.Parts.Main.ViewModel"
             x:Class="OpenTAG.Funnel.Parts.Main.View.ScanView"
             x:DataType="viewModels:ScanViewModel">
    <ContentPage.Content>
        <Grid RowDefinitions="Auto,*,Auto">
        
            <!-- Header -->
            <Label
                Grid.Row="0"
                Padding="20"
                Text="Fill the template fields below and press Save"
                FontSize="20"
                Margin="0,0,0,10" />
        
            <!-- Scrollable content -->
            <ScrollView 
                Grid.Row="1">
                <VerticalStackLayout x:Name="FieldsContainer" Spacing="5" Padding="20">
                    <!-- Fields will be added here programmatically -->
                </VerticalStackLayout>
            </ScrollView>
        
            <!-- Footer with buttons -->
            <Grid 
                Grid.Row="2" 
                ColumnDefinitions="*,*" 
                Padding="20"
                Margin="0,10,0,0">
                
                <Button
                    Grid.Column="0"
                    HorizontalOptions="Start"
                    Text="Back"
                    Background="{x:Null}"
                    BackgroundColor="Transparent"
                    TextColor="Black"
                    Command="{Binding BackWithoutSaveCommand}" />
            
                <Button
                    Grid.Column="1"
                    HorizontalOptions="End"
                    Text="Save"
                    Command="{Binding SaveCommand}" />
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>